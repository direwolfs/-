<script  language="javascript">
var num;
function fun()
{
   f1.txt.value+='0';
   num=0;
}

function fun1()
{
   f1.txt.value+='1';
   num=1;
}

function fun2()
{
   f1.txt.value+='2'
   num=2;
}

function fun3()
{
   f1.txt.value+='3';
   num=3;
}

function fun4()
{
   f1.txt.value+='4';
    num=4;
}

function fun5()
{
   f1.txt.value+='5';
    num=5;
}

