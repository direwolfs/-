function fun_add()
{
   f1.txt.value+='+';
}

function fun_sub()
{
   f1.txt.value+='-';
}

function fun_mul()
{
   f1.txt.value+='*';
}

function fun_div()
{
   f1.txt.value+='/';
}

function fun_clear()
{ 
   f1.txt.value='';
}

function fun_eql()
{
   f1.txt.value=eval(f1.txt.value);
}

function fun_bac()
{
      f1.txt.value=(-1)*f1.txt.value;
}

function fun_Backspace()
{
      f1.txt.value=f1.txt.value.slice(0,-1);
}

function fun_point()
{
   f1.txt.value+='.';
}

function fun_CE()
{
     f1.txt.value='0';
}

